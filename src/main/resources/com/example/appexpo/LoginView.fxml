<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720" prefWidth="1280" styleClass="anchor-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.appexpo.LoginController">

    <children>
        <VBox fx:id="formContainer" alignment="CENTER" layoutX="621.0" layoutY="281.0" spacing="20">

            <Label styleClass="header" text="Selamat Datang di Wellness Hub!" />

            <TextField fx:id="emailField" prefHeight="26.0" prefWidth="400" promptText="Email" styleClass="input-field" />

            <PasswordField fx:id="passwordField" prefWidth="400" promptText="Password" styleClass="input-field" />

            <Button onAction="#handleLogin" prefWidth="200" styleClass="primary-button" text="Login" />

            <Hyperlink onAction="#goToRegister" styleClass="link" text="Belum punya akun? Daftar" />

        </VBox>
    </children>
</AnchorPane>
