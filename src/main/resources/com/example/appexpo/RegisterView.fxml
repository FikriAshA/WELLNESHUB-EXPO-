<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720" prefWidth="1280" styleClass="anchor-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.appexpo.RegisterController">

    <children>
        <VBox fx:id="formContainer" alignment="CENTER" layoutX="621" layoutY="181.0" spacing="20">

            <Label styleClass="header" text="Daftar Akun Baru" />

            <TextField fx:id="nameField" prefWidth="400" promptText="Nama Lengkap" styleClass="input-field" />

            <TextField fx:id="emailField" prefWidth="400" promptText="Email" styleClass="input-field" />

            <PasswordField fx:id="passwordField" prefWidth="400" promptText="Password" styleClass="input-field" />

            <PasswordField fx:id="confirmField" prefWidth="400" promptText="Konfirmasi Password" styleClass="input-field" />

            <Button onAction="#handleRegister" prefWidth="200" styleClass="primary-button" text="Daftar" />

            <Hyperlink onAction="#goToLogin" styleClass="link" text="Sudah punya akun? Login" />

        </VBox>
    </children>
</AnchorPane>
