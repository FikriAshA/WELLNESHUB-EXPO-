<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="720" prefWidth="1280" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.appexpo.ArtikelMenuController">

   <VBox alignment="TOP_CENTER" spacing="30" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

      <Label styleClass="header-box" text="Artikel dan Tips Hidup Sehat" />

      <Label styleClass="header" text="Artikel Seputar Kesehatan" />
      <HBox alignment="CENTER" spacing="40">
         <VBox styleClass="header-box" alignment="CENTER" spacing="10">
            <ImageView fx:id="article1Image" styleClass="article-image" fitHeight="150" fitWidth="250">
               <image>
                  <Image url="@../../../artikel1.jpg" />
               </image></ImageView>
            <Hyperlink fx:id="article1" onAction="#gotoArticle1" styleClass="subheader-light" text="Apakah Depresi Bahaya?" />
         </VBox>
         <VBox styleClass="header-box" alignment="CENTER" spacing="10">
            <ImageView fx:id="article2Image"  styleClass="article-image" fitHeight="150" fitWidth="250">
               <image>
                  <Image url="@../../../artikel2.jpg" />
               </image></ImageView>
            <Hyperlink fx:id="article2" onAction="#gotoArticle2" styleClass="subheader-light" text="Gejala Depresi" />
         </VBox>
         <VBox styleClass="header-box" alignment="CENTER" spacing="10">
            <ImageView fx:id="article3Image" styleClass="article-image" fitHeight="150" fitWidth="250">
               <image>
                  <Image url="@../../../artikel3.jpg" />
               </image></ImageView>
            <Hyperlink fx:id="article3" onAction="#gotoArticle3" styleClass="subheader-light" text="Dampak Buruk Depresi" />
         </VBox>
      </HBox>

      <Label styleClass="header" text="Tips Hidup Sehat" />
      <HBox alignment="CENTER" spacing="40">
         <VBox styleClass="header-box" alignment="CENTER" spacing="10">
            <ImageView fx:id="tips1Image" styleClass="article-image" fitHeight="150" fitWidth="250">
               <image>
                  <Image url="@../../../tips1.jpg" />
               </image></ImageView>
            <Hyperlink fx:id="tips1" onAction="#gotoTips1" styleClass="subheader-light" text="Tips Mencegah Depresi" />
         </VBox>
      </HBox>

   </VBox>

   <Button layoutX="14.0" layoutY="7.0" onAction="#handleBack" styleClass="primary-button" text="Kembali" />
</AnchorPane>
